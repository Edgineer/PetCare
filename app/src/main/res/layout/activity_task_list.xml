<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matthewsanchez.petcare.ui.TaskList">

    <ListView
        android:id="@+id/mattsTaskListView2"
        android:layout_width="425dp"
        android:layout_height="149dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toTopOf="@+id/create"
        app:layout_constraintTop_toBottomOf="@+id/mattsTaskListView"
        app:layout_constraintVertical_bias="0.154"
        tools:layout_editor_absoluteX="0dp"></ListView>

    <Button
        android:id="@+id/create"
        android:layout_width="140dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="goToReTask"
        android:text="Create Daily Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/join"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mattsListView" />

    <Button
        android:id="@+id/join"
        android:layout_width="140dp"
        android:layout_height="71dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:onClick="goToOneTask"
        android:text="Create a One-Time Task"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/create"
        app:layout_constraintTop_toBottomOf="@+id/mattsListView" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="493dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="none"
        android:text="Daily Tasks"
        app:layout_constraintBottom_toTopOf="@+id/mattsTaskListView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/mattsTaskListView"
        android:layout_width="455dp"
        android:layout_height="135dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.129"
        tools:layout_editor_absoluteX="0dp"></ListView>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="493dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="One-Time Tasks"
        app:layout_constraintBottom_toTopOf="@+id/mattsTaskListView2"
        app:layout_constraintTop_toBottomOf="@+id/mattsTaskListView"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
